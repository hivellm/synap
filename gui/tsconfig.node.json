{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist-electron",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": ["vite.config.ts", "electron/**/*.ts"]
}

